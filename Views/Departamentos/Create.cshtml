@model Empresa.Models.Departamento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDepartamento" class="control-label"></label>
                <input asp-for="NomeDepartamento" class="form-control" />
                <span asp-validation-for="NomeDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                @*Para aparecer a lista de enum criada no model*@
                <select asp-for="Localizacao"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Localizacao>()">
                    <option>Selecionar Localização ...</option>
                </select>
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
